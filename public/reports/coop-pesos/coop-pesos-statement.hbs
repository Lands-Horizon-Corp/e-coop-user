            </tr>
            {{/each}}
            </table>
        </div>
        {{/if}}

        {{#if stability.net_institutional_capital}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr>
                <td class="label-col">{{stability.net_institutional_capital.title}}</td>
                <td class="desc-col"></td>
                <td class="standard-col"></td>
                <td class="score-col"></td>
                <td class="value-col"></td>
            </tr>
            {{#each stability.net_institutional_capital.entries}}
            <tr>
                <td class="label-col"></td>
                <td class="desc-col indent-2">{{description}}</td>
                <td class="standard-col">{{standard}}</td>
                <td class="score-col">{{hi_score}}</td>
                <td class="value-col">{{values}}</td>
            </tr>
            {{/each}}
            </table>
        </div>
        {{/if}}

        {{#if stability.sub_total}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr class="coop-subtotal-row">
                <td class="label-col"></td>
                <td class="desc-col">SUB-TOTAL:</td>
                <td class="standard-col"></td>
                <td class="score-col">{{stability.sub_total}}</td>
                <td class="value-col"></td>
            </tr>
            </table>
        </div>
        {{/if}}

        <!-- O - OPERATIONS (10%) -->
        <div class="coop-section-header">O - OPERATIONS (10%)</div>
        
        {{#if operations.performance_of_membership_growth}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr>
                <td class="label-col">{{operations.performance_of_membership_growth.title}}</td>
                <td class="desc-col"></td>
                <td class="standard-col"></td>
