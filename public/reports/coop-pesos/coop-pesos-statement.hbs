            {{#each structure_of_assets.asset_quality.entries}}
            <tr>
                <td class="label-col"></td>
                <td class="desc-col indent-2">{{description}}</td>
                <td class="standard-col">{{standard}}</td>
                <td class="score-col">{{hi_score}}</td>
                <td class="value-col">{{values}}</td>
            </tr>
            {{/each}}
            </table>
        </div>
        {{/if}}

        {{#if structure_of_assets.asset_structure}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr>
