            <table class="coop-table">
            <tr>
                <td class="label-col">{{operations.trend_in_external_borrowings.title}}</td>
                <td class="desc-col"></td>
                <td class="standard-col"></td>
                <td class="score-col"></td>
                <td class="value-col"></td>
            </tr>
            {{#each operations.trend_in_external_borrowings.entries}}
            <tr>
                <td class="label-col"></td>
                <td class="desc-col indent-2">{{description}}</td>
                <td class="standard-col">{{standard}}</td>
                <td class="score-col"></td>
