            </table>
        </div>
        {{/if}}

        <!-- GRAND TOTAL -->
        {{#if grand_total}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr class="coop-total-row">
                <td class="label-col"></td>
                <td class="desc-col">GRAND TOTAL:</td>
                <td class="standard-col"></td>
                <td class="score-col">{{grand_total}}</td>
                <td class="value-col">{{grand_total_points}}</td>
            </tr>
            </table>
        </div>
        {{/if}}

        <!-- Signatures -->
        <div class="coop-signature-grid">
            <div class="coop-signature-block">
                <p class="coop-signature-label">Prepared by:</p>
                <div class="coop-signature-line">{{prepared_by}}</div>
            </div>
            <div class="coop-signature-block">
                <p class="coop-signature-label">Approved by:</p>
                <div class="coop-signature-line">{{approved_by}}</div>
            </div>
        </div>

        <!-- Footer -->
        <div class="coop-footer">
            <div class="coop-footer-left">Page No: {{page_number}}</div>
            <div class="coop-footer-center">User Id: {{user_id}}</div>
            <div class="coop-footer-right">Report Date: {{report_date}} Time: {{time}}</div>
        </div>
    </div>

</body>

</html>
