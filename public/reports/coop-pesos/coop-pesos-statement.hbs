                <td class="score-col"></td>
                <td class="value-col"></td>
            </tr>
            {{#each efficiency.rate_of_return_on_members_share.entries}}
            <tr>
                <td class="label-col"></td>
                <td class="desc-col indent-2">{{description}}</td>
                <td class="standard-col">{{standard}}</td>
                <td class="score-col">{{hi_score}}</td>
                <td class="value-col">{{values}}</td>
            </tr>
            {{/each}}
            </table>
        </div>
        {{/if}}

        {{#if efficiency.sub_total}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr class="coop-subtotal-row">
                <td class="label-col"></td>
                <td class="desc-col">SUB-TOTAL:</td>
                <td class="standard-col"></td>
                <td class="score-col">{{efficiency.sub_total}}</td>
                <td class="value-col"></td>
            </tr>
            </table>
        </div>
        {{/if}}

        <!-- S - STABILITY (30%) -->
        <div class="coop-section-header">S - STABILITY (30%)</div>
        
        {{#if stability.solvency}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
