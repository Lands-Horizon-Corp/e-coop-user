        <!-- S - STRUCTURE OF ASSETS (15%) -->
        <div class="coop-section-header">S - STRUCTURE OF ASSETS (15%)</div>
        
        {{#if structure_of_assets.asset_quality}}
        <div class="coop-table-wrapper">
            <table class="coop-table">
            <tr>
                <td class="label-col">{{structure_of_assets.asset_quality.title}}</td>
