{
  "name": "e-coop-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/e-coop-core/src",
  "projectType": "application",
  "tags": ["scope:core"],
  "// targets": "to see all targets run: nx show project e-coop-core --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build", 
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/e-coop-core",
        "main": "apps/e-coop-core/src/main.tsx",
        "tsConfig": "apps/e-coop-core/tsconfig.app.json"
      }
    },
    "start": {
    "executor": "nx:run-commands",
    "options": {
      "command": "bunx serve {outputPath} -l 3002 --single"
    }
  }
  }
}
